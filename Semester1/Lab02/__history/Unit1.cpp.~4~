//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "About.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
AnsiString s_edit;
byte task_num;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	s_edit = "I live in Moscow";
	task_num = 1;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Exit1Click(TObject *Sender)
{
    Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::About1Click(TObject *Sender)
{
	//AboutBox -> Show();  // обычное окно
	AboutBox -> ShowModal();  // модальное окно
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Dialog1Click(TObject *Sender)
{
	Form2 = new TForm2(this);
	Form2 -> Edit1 -> Text = s_edit;
	if(task_num == 1) {
		Form2 -> Task_1_RB -> Checked = true;
		Form2 -> Task_2_RB -> Checked = false;
	}
	if(task_num == 2) {
		Form2 -> Task_1_RB -> Checked = false;
		Form2 -> Task_2_RB -> Checked = true;
	}
	Dialog1 -> Enabled = false;    // нельзя будет повторно открыть - кривое решение далее
	Form2 -> Show();
}
//---------------------------------------------------------------------------
